{% extends 'base.html.twig' %}

{% block titulo %}
    Indicador
{% endblock %}

{% block contenido %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Indicador</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ indicador.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Fuentes</th>
                        <td>{% for fuente in indicador.recursos %}
                        <div>
                            {{ fuente.nombre }}
                            <a href="{{ asset('uploads/archivos/' ~ fuente.enlace) }}" target="_blank"><i class="fa fa-folder-open"></i> Ver archivo</a>
                        </div>
                        {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
            <p><a class="btn btn-success" href="{{ path('recurso_nuevo', { 'idIndicador':indicador.id }) }}"><i class="fa fa-upload"></i> Agregar y asociar un nuevo documento al Indicador</a></p>
            <p><a class="btn btn-primary" href="{{ path('caracteristica_show', { 'id': indicador.caracteristica.id }) }}">Volver a Caracter√≠stica</a></p>
{% endblock %}

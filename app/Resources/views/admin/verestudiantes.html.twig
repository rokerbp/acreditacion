{% block stylesheets %}
    <link href="{{ asset ('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset ('vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
    <link href="{{ asset ('vendor/datatables/datatables.css') }}" rel="stylesheet">

{% endblock %}

{# Plantilla de la aplicación #}
{% extends 'base.html.twig' %}
{# Titulo #}
{% block titulo %}
 Estudiantes
{% endblock %}
{# Contenido #}
{% block contenido %}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Estudiantes</h1>
        </div>
    </div>

    <!-- /.inicio resumen estudiantes -->
    <div class="row">
        <div class="col-lg-12">          
            <a href="{{ path('estudiantes') }}" class="btn btn-success btn-lg" type="button"><i class="fa fa-plus"></i> Agregar Estudiante</a>
        </div>
    </div>
     <!-- /.fin resumen estudiantes -->

    <div class="row">  
    <div class="col-lg-12">  
        <div class="panel-body">
            <table width="100%" class="table table-striped table-bordered table-hover dataTable dtr-inline" id="dataTables-example" role="grid">
                <thead>
                    <tr role="row">
                        <th class="shorting_desc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descendind">Nombre</th>
                        <th>Identificacion</th>
                        <th>Año de Ingreso</th>
                        <th>Estado</th>
                        <th>Año de Graduacion</th>
                        <th>Ciudad de Origen</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Ciudad Actual</th>
                        <th>Editar</th>
                    </tr>
                </thead>
                <tbody>
                {% for estudiante in estudiantes %}
                    <tr class="odd gradeA">
                        <td>{{ estudiante.nombre }}</td>
                        <td>{{ estudiante.identificacion }}</td>
                        <td>{{ estudiante.anioIngreso|date('Y-m-d') }}</td>
                        <td>{{ estudiante.estado }}</td>
                        <td>{{ estudiante.anioGraduacion is empty ? "NA" :  estudiante.anioGraduacion|date('Y-m-d') }}</td>
                        <td>{{ estudiante.ciudadOrigen }}</td>
                        <td>{{ estudiante.correo }}</td>
                        <td>{{ estudiante.telefono }}</td>
                        <td>{{ estudiante.ciudadActual }}</td>
                        <td>
                            <a type="button" class="btn btn-warning" href="{{path('estudiantes', {'id':estudiante.id})}}"><i class="fa fa-pencil"></i></a>
                            <a type="button" class="btn btn-danger" href="{{path('borrarEstudiante', {'id':estudiante.id})}}" onclick="return controlBorrado('{{path('borrarEstudiante', {'id':estudiante.id})}}','{{estudiante.nombre}}');"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>


<div class="panel-footer"></div>

{% endblock %}
    
{% block javascripts %}
    <script src="{{ asset ('vendor/datatables/datatables.js') }}"></script>

    <script>
        $(document).ready( function () {
            $('#dataTables-example').DataTable({
                dom: 'Bfrtip',
                buttons: 
                    [
                        'csv',
                        {
                            extend: 'pdfHtml5',
                            download: 'open',
                            pageSize: 'A3',
                            exportOptions: 
                            {
                                columns:
                                [
                                    0, 1, 2, 3, 4, 5, 6, 7, 8
                                ]
                            }
                        }

                    ]
            })
        });

    </script>
{% endblock %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('modelo_show', { 'id': modelo.id }) }}">ver</a>
                        </li>
                        <li>
                            <a href="{{ path('modelo_edit', { 'id': modelo.id }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <a class="btn btn-success" href="{{ path('modelo_new') }}">Crear a new modelo</a>
    </ul>
</div>
</div>
{% endblock %}
